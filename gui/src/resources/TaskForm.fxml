                        <Label text="Random sleep time:" GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.valignment="TOP" />
                        <RadioButton fx:id="yesRandomRB" mnemonicParsing="false" onAction="#yesRandomRBSelect" text="yes" GridPane.columnIndex="2" GridPane.rowIndex="3" GridPane.valignment="TOP" />

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToHeight="true" fitToWidth="true" BorderPane.alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.sideMenu.SideMenuController">
    <content>
        <VBox spacing="10.0">
            <children>
                <Button fx:id="loadXMLBtn" mnemonicParsing="false" onAction="#OnLoadBtnClick" text="" VBox.vgrow="NEVER">
                    <VBox.margin>
                        <Insets left="10.0" right="10.0" top="10.0" />
                    </VBox.margin>
               <tooltip>
                  <Tooltip text="load xml file" />
               </tooltip>
                </Button>
                <Button fx:id="findPathBtn" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#OnFindPathBtnClick" text="" textOverrun="CLIP" VBox.vgrow="NEVER">
                    <VBox.margin>
                        <Insets left="10.0" right="10.0" />
                    </VBox.margin>
               <tooltip>
                  <Tooltip text="find all paths between targets" />
               </tooltip>
                </Button>
                <Button fx:id="findCircleBtn" mnemonicParsing="false" onAction="#OnFindCircleBtnClick" text="" VBox.vgrow="NEVER">
                    <VBox.margin>
                        <Insets left="10.0" right="10.0" />
                    </VBox.margin>
               <tooltip>
                  <Tooltip text="find if target is in circle" />
               </tooltip>
                </Button>
                <Button fx:id="displayRelatedBtn" mnemonicParsing="false" onAction="#OnDisplayRelatedBtnClick" text="" VBox.vgrow="NEVER">
                    <VBox.margin>
                        <Insets left="10.0" right="10.0" />
                    </VBox.margin>
               <tooltip>
                  <Tooltip text="what if selection" />
               </tooltip>
                </Button>
                <Button fx:id="runTaskBtn" mnemonicParsing="false" onAction="#OnRunTaskBtnClick" text="" VBox.vgrow="NEVER">
                    <VBox.margin>
                        <Insets left="10.0" right="10.0" />
                    </VBox.margin>
               <tooltip>
                  <Tooltip text="launch task" />
               </tooltip>
                </Button>
            <Button fx:id="graphVizBtn" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" nodeOrientation="LEFT_TO_RIGHT" onAction="#graphVizBtnClicked" VBox.vgrow="NEVER">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" />
               </VBox.margin>
               <tooltip>
                  <Tooltip text="graphviz" />
               </tooltip>
            </Button>
                <Button fx:id="settingBtn" mnemonicParsing="false" onAction="#OnSettingBtnClicked" text="" VBox.vgrow="NEVER">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" />
                    </VBox.margin>
               <tooltip>
                  <Tooltip text="setting" />
               </tooltip>
                </Button>
            </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
        </VBox>
    </content>
</ScrollPane>

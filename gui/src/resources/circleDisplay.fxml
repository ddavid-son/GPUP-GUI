    <children>
        <ScrollPane fitToHeight="true" fitToWidth="true" GridPane.columnIndex="1" GridPane.columnSpan="5"
                    GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.rowSpan="2"
                    GridPane.valignment="CENTER">
            <content>
                <HBox fx:id="targetChooserBox" alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0"
                      style="-fx-border-color: black;">
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                </HBox>
            </content>
        </ScrollPane>
        <ScrollPane fitToHeight="true" fitToWidth="true" GridPane.columnIndex="1" GridPane.columnSpan="5"
                    GridPane.rowIndex="5" GridPane.rowSpan="2" GridPane.valignment="CENTER">
            <content>
                <HBox fx:id="circleDisplayBox" alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="30.0"
                      style="-fx-border-color: black;"/>
            </content>
        </ScrollPane>
        <Label text="Please choose a target" GridPane.columnIndex="2" GridPane.columnSpan="3"
               GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER"/>
    </children>
</GridPane>
